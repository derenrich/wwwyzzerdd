{
    "manifest_version": 3,
    "name": "Wwwyzzerdd for Wikidata",
    "version": "0.1.0.0",
    "description": "Edit Wikidata from Wikipedia!",
    "icons": {
        "128": "./icon/wwwyzzerdd-128.png"
     },
    "action": {
        "browser_style": true,
        "default_title": "Wwwyzzerdd",
        "default_popup": "config.html",
        "default_icon": "./icon/wwwyzzerdd.png"
    },
    "options_ui": {
        "browser_style": true,
        "open_in_tab": false,
        "page": "config.html"
    },
    "commands": { },
    "content_scripts": [{
        "matches": ["*://*.wikipedia.org/*"],
        "js": ["frontend/frontend.tsx"],
        "css": [],
        "run_at": "document_idle"
    }],
    "event_rules": [],
    "externally_connectable": {
        "matches": []
    },
    "file_browser_handlers": [ ],
    "file_system_provider_capabilities": {
        "configurable": false,
        "multiple_mounts": false,
        "source": "file"
    },
    "homepage_url": "https://github.com/derenrich/wwwyzzerdd",
    "offline_enabled": false,
    "permissions": ["storage",
                    "alarms",
                    "contextMenus",
                    "scripting",
                    "webNavigation",
                    "unlimitedStorage"],
    "host_permissions": ["https://www.wikidata.org/*",
                    "https://*.wikipedia.org/*",
                    "https://api-inference.huggingface.co/models/derenrich/*"
                   ],
    "requirements": {},
    "sandbox": {},
    "short_name": "wwwyzzerdd",
    "storage": {},
    "web_accessible_resources": [],
    "background": {
        "service_worker": "worker.ts",
        "type": "module"
    },
    "browser_specific_settings": {
        "gecko": {
          "id": "{81937705-39a0-413a-b105-f69b046eeaef}"
        }
    }
}

{
    "manifest_version": 2,
    "name": "Wwwyzzerdd for Wikidata",
    "version": "0.0.2.5",
    "description": "Edit wikidata from wikipedia!",
    "icons": { },
    "browser_action": { 
        "browser_style": true,
        "default_icon": {
          "32": "./button/chillout-32.png",
          "48": "./button/chillout-48.png"
        },
        "default_title": "Wwwyzzerdd",
        "default_popup": "config.html"
    },
    "options_ui": {
        "browser_style": true,
        "open_in_tab": false,
        "page": "config.html"
    },
    "commands": { },
    "content_scripts": [{
        "matches": ["*://*.wikipedia.org/*"],
        "js": ["frontend.tsx"],
        "css": [],
        "run_at": "document_idle"
    }],
    "event_rules": [],
    "externally_connectable": {
        "matches": []
    },
    "file_browser_handlers": [ ],
    "file_system_provider_capabilities": {
        "configurable": false,
        "multiple_mounts": false,
        "source": "file"
    },
    "homepage_url": "https://github.com/derenrich/wwwyzzerdd",
    "offline_enabled": false,
    "permissions": ["storage",
                    "alarms",
                    "activeTab",
                    "contextMenus",
                    "unlimitedStorage",
                    "https://www.wikidata.org/*",
                    "https://*.wikipedia.org/*"                  
                   ],
    "requirements": {},
    "sandbox": [],
    "short_name": "wwwyzzerdd",
    "storage": {},
    "web_accessible_resources": [],
    "background": {
        "scripts": ["background.ts"]
    },
    "browser_specific_settings": {
        "gecko": {
          "id": "wwwyzzerdd@erenrich.net"
        }
    }
}
